<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.dao.RecipeCommentRecommendDAO">
    
    <!-- 댓글 추천 -->
    <insert id="add_recipe_comment_recommend">
		insert into recipe_comment_recommend(comment_no, mf_no)
		values (#{comment_no},#{mf_no})
    </insert>
    
    <!-- 댓글 추천 취소 -->
    <delete id="minus_recipe_comment_recommend">
    	delete from recipe_comment_recommend
 		 where comment_no=#{comment_no} and mf_no=#{mf_no}
    </delete>

    <!-- 댓글 추천 유무 -->
    <select id="recipe_comment_yn" resultType="int">
    	select count(*)
    	  from recipe_comment_recommend
 		 where comment_no=#{comment_no} and mf_no=#{mf_no}
    </select>
    
</mapper>